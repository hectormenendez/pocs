{
    "name": "@etor.dev/back-core",
    "version": "0.0.1",
    "private": true,
    "type": "module",
    "engines": {
        "node": ">=14.19.0",
        "npm": ">=9.2.0",
        "deno": ">=1.29.0"
    },
    "os": [
        "darwin",
        "linux",
        "windows"
    ],
    "config": {
        "aws_name": "core",
        "deno_main_file": "./main.ts",
        "deno_main_flag": "--unstable --allow-net --allow-read --allow-write --allow-env --import-map=../imports.json",
        "deno_queue_file": "./queue.ts",
        "deno_queue_flag": "--import-map=../imports.json"
    },
    "scripts": {
        "start": "run-p start:main",
        "start:main": "deno run $npm_package_config_deno_main_flag $npm_package_config_deno_main_file",
        "start:queue": "deno run $npm_package_config_deno_queue_flag $npm_package_config_deno_queue_file",
        "build": "docker build -t ${npm_package_config_aws_repo}:${npm_package_config_aws_name}-v${npm_package_version} .",
        "push": "docker push ${npm_package_config_aws_repo}:${npm_package_config_aws_name}-v${npm_package_version}",
        "postpush": "docker push  ${npm_package_config_aws_repo}:${npm_package_config_aws_name}-latest",
        "deploy": "npm run build && npm run push"
    },
    "devDependencies": {
        "npm-run-all": "^4.1.5"
    }
}
