{
    "name": "@etor.dev/root",
    "private": true,
    "type": "module",
    "engines": {
        "node": ">=14.19.0",
        "npm": ">=9.2.0"
    },
    "os": [
        "darwin",
        "linux"
    ],
    "lint-staged": {
        "*.{ts,tsx,astro}": [
            "cross-env NODE_ENV=production eslint --fix",
            "prettier --write"
        ]
    },
    "config": {
        "deno_version": "1.29.0"
    },
    "scripts": {
        "prepare": "husky install",
        "postinstall": "node .scripts/prepare-back.js",
        "start:front": "lerna exec --scope=@etor.dev/front -- npm start",
        "build:front": "lerna exec --scope=@etor.dev/front -- npm run build",
        "deploy:front": "netlify deploy --build"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^5.47.0",
        "@typescript-eslint/parser": "^5.47.0",
        "eslint": "^8.30.0",
        "eslint-plugin-astro": "^0.21.1",
        "eslint-plugin-jsx-a11y": "^6.6.1",
        "extract-zip": "^2.0.1",
        "husky": "^8.0.2",
        "lerna": "^6.3.0",
        "lint-staged": "^13.1.0",
        "netlify-cli": "^12.5.0",
        "prettier": "^2.8.1",
        "prettier-plugin-astro": "^0.7.0"
    },
    "workspaces": [
        "front",
        "back/*"
    ]
}
