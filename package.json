{
    "name": "@gik/pomodoro",
    "version": "0.0.0",
    "private": true,
    "engines": {
        "node": ">=14.16.0",
        "npm": ">=7.6.3"
    },
    "os": [
        "darwin",
        "linux"
    ],
    "lint-staged": {
        "*.{js,ts,svelte}": [
            "npm run check"
        ]
    },
    "scripts": {
        "postinstall": "husky install",
        "serve": "sirv ./dist --cors",
        "serve:dev": "npm run serve -- --dev",
        "build:www": "rollup -c",
        "build:app": "tsc -p ./@app/tsconfig.json",
        "build": "node scripts/clean && npm run build:www && npm run build:app",
        "start:www": "npm run build:www -- -w",
        "format": "prettier --write ./@{app,www}/**/*.{svelte,ts} ./*.{js,json} || echo",
        "check": "eslint --fix '.' && svelte-check --workspace ./@www/ && npm run format"
    },
    "dependencies": {
        "sirv-cli": "^1.0.0"
    },
    "devDependencies": {
        "@rollup/plugin-alias": "^3.1.8",
        "@rollup/plugin-commonjs": "^17.0.0",
        "@rollup/plugin-json": "^4.1.0",
        "@rollup/plugin-node-resolve": "^11.0.0",
        "@rollup/plugin-typescript": "^8.0.0",
        "@tsconfig/svelte": "^2.0.0",
        "@typescript-eslint/eslint-plugin": "^5.7.0",
        "@typescript-eslint/parser": "^5.7.0",
        "electron": "^16.0.5",
        "eslint": "^8.5.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-svelte3": "^3.2.1",
        "husky": "^7.0.4",
        "lint-staged": "^12.1.3",
        "prettier": "^2.5.1",
        "prettier-plugin-svelte": "^2.5.1",
        "rollup": "^2.3.4",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-css-only": "^3.1.0",
        "rollup-plugin-livereload": "^2.0.0",
        "rollup-plugin-svelte": "^7.0.0",
        "rollup-plugin-terser": "^7.0.0",
        "sass": "^1.45.0",
        "shelljs": "^0.8.4",
        "svelte": "^3.0.0",
        "svelte-check": "^2.0.0",
        "svelte-preprocess": "^4.0.0",
        "tslib": "^2.0.0",
        "typescript": "^4.0.0",
        "typescript-transform-paths": "^3.3.1"
    }
}
