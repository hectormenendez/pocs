@keyframes blink-bg
	0%    { background: #C33; }
	50%   { background: none; }
	100%  { background: #C33; }

@keyframes blink-fg
	0%    { color: #FFF; }
	50%   { color: #C33; }
	100%  { color: #FFF; }

.list-card-labels

	.card-label
		height                     : auto          !important
		width                      : auto          !important
		text-shadow                : none          !important
		line-height                : 2.00em        !important
		font-size                  : 0.53em        !important
		letter-spacing             : 0.05em        !important
		padding                    : 0.00em 0.66em !important
		text-overflow              : initial       !important
		border-bottom-left-radius  : 0.4em         !important
		border-bottom-right-radius : 0.4em         !important

.badge-time

	border-radius : 0.25em
	padding-left  : 0.33em
	padding-right : 0.33em

	&.badge-time-error
	&.badge-time-blink
	&.badge-time-show
	&.badge-time-info
	&.badge-time-warn
		color: #FFF

		.badge-icon
		.badge-text
			color : inherit

	&.badge-time-warn
		background: orange

	&.badge-time-show
		background: none
		color     : #C33

	&.badge-time-error
		background: #C00

	&.badge-time-info
		background: #2A2

	&.badge-time-halt
	&.badge-time-halt .badge-icon
	&.badge-time-halt .badge-text
		-webkit-animation-direction       : normal
		-webkit-animation-duration        : 2s
		-webkit-animation-iteration-count : infinite
		-webkit-animation-timing-function : ease

	&.badge-time-halt
		-webkit-animation-name : blink-bg

		& .badge-icon
		& .badge-text
			-webkit-animation-name : blink-fg

.badge-whom

	.badge-text
		text-transform : lowercase
		color          : #999

.badge-hash

	.badge-text
		background     : #AAA
		color          : white
		padding-left   : 0.33em
		padding-right  : 0.33em
		border-radius  : 0.25em
		text-transform : uppercase

.badge-hash-bug .badge-text
	background : #F36

.badge-hash-plan .badge-text
	background : #9C3

.badge-hash-task .badge-text
	background : #39F

.badge-hash-groom .badge-text
	background : #A63

.badge-hash-story .badge-text
	background : #EC0

