{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["ES2020", "ES7", "ES6", "DOM"],
        "moduleResolution": "node",
        "typeRoots": ["node_modules/@types"],
        "resolveJsonModule": true,
        "declaration": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "allowJs": true,
        "plugins": [
            { "transform": "typescript-transform-paths" },
            { "transform": "typescript-transform-paths", "afterDeclarations": true }
        ]
    },
    "exclude": ["node_modules", "dist", ".vscode", ".husky"],
    "include": [
        ".eslintrc.js",
        "rollup.config.js",
        "package.config.js",
        "prettierrc.js",
        "@app",
        "@www"
    ]
}
